ฐานข้อมูล general_system

ตาราง tb_booking
CREATE TABLE tb_booking (
    booking_id INT(20) PRIMARY KEY AUTO_INCREMENT,
    meetingname VARCHAR(255),
    startday DATE,
    endday DATE,
    start_time TIME,
    end_time TIME,
    room_id INT(20),                 -- เชื่อมโยงกับ tb_room
    number INT,                      -- จำนวนคน
    details TEXT,
    status_id INT(20) DEFAULT 1,    -- ค่าเริ่มต้นเป็น "รอดำเนินการ"
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    FOREIGN KEY (room_id) REFERENCES tb_room(room_id),
    FOREIGN KEY (status_id) REFERENCES tb_status(status_id)
);


ตาราง tb_room
CREATE TABLE tb_room (
    room_id INT(20) PRIMARY KEY AUTO_INCREMENT,
    roomname VARCHAR(255),
    room VARCHAR(255),
    status_id INT(20),               -- เพิ่ม status_id เชื่อมโยงกับ tb_status
    details TEXT,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    FOREIGN KEY (status_id) REFERENCES tb_status(status_id)
);

ตาราง tb_status
CREATE TABLE tb_status (
    status_id INT(20) PRIMARY KEY AUTO_INCREMENT,
    statusname VARCHAR(255),
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP
);


